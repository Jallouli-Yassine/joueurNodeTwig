{% block body %}
    <html>
    <head>
        <!-- Include Socket.IO client library -->
        <script src="/socket.io/socket.io.js"></script>
    </head>

    <body>
    <h1>{{ title }}</h1>
    <center>
        Nom Partie: <input id="nom" type="text"><br>
        ID Joueur 1: <input id="id1" type="text"><br>
        ID Joueur 2: <input id="id2" type="text"><br><br>
        <input onclick="envoyer()" type="submit">
        <button onclick="afficher()">Afficher Stat</button>
    </center>

    <!-- JavaScript code for WebSocket interaction -->
    <script>
        // Connect to the WebSocket server
        const socket = io.connect();
        // Listen for the 'msg' event from the server
        socket.on('msg', function(data) {
            // Handle the received data here
            console.log('Received "msg" event:', data);
            // Perform any necessary actions based on the received data
        });

        // Function to send data to the server
        function envoyer() {
            partie = {
                nom: nom.value,
                id1: id1.value,
                id2: id2.value
            }
            socket.emit("partie", partie)

        }







    </script>
    </body>
    </html>
{% endblock %}
